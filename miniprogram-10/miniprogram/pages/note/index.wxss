/* pages/note/index.wxss */
.headline{
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 15px;
}
.title{
    position: relative;
    font-size: larger;
    width: 163px;
    height: 31px;
    left: 20px;
}
.iconitem{
    float:right;
    flex-direction: column;
    margin-right: 20px;
}
.image1{
    /* 喜欢-未 */
position: relative;
width: 25px;
height: 25px;
margin-left: 10px;
margin-right: 10px;
}
.button-share{
    position: relative;
    padding: 0%;
    width: 25px;
    height: 25px;
    float:right;
    margin-right: 10px;
    margin-left: 10px;
}
.image2{
/* 分享 */
position: relative;
width: 25px;
height: 25px;

}
.swiper{
}
.swiperbody{
    height: 350px;
}
.swiperItem{
    position: relative;
    width: 100%;
    height: 350px;
    left: 0;
}
.content{
    padding: 10px;
    color: rgba(18, 18, 18, 0.6);
font-family: Noto Sans SC;
font-size: 18px;
font-weight: 400;
line-height: 24px;
letter-spacing: 0px;
text-align: left;
text-overflow:ellipsis;
word-wrap:break-word;
}
.inputbox{
    width: 96%;
    margin-left: 2%;
    margin-right: 2%;
    height: 50px;
    border-radius: 25px;
    box-sizing: border-box;
    border: 2px solid rgba(231, 234, 240, 0.514);
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center; 
    bottom: 1%;
}
.edit{
    float: left;
    width: 20px;
    height: 20px;
}
