/* pages/myPage/index.wxss */
.top-container {
    margin: 0;
    /* border: solid 1px red; */
  }
  
  .top-bg {
    border-radius: 0 0 50rpx 50rpx;
    width: calc(100%);
    height: 230rpx;
  }
  
  .user-info {
    position: relative;
    top: -100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .userinfo-avatar {
    width: 150rpx;
    height: 150rpx;
    margin: 20rpx;
    border-radius: 50px;
    color: #000;
    border: rgb(180, 180, 180) 1px solid;
  }
  
  .userinfo-nickname {
    color: rgba(0, 0, 0, 0.8);
    font-size: large;
  }
  
  .pick-position {
    width: 265rpx;
    height: 50rpx;
    padding-left: 35rpx;
    /* border: solid 1px blueviolet; */
    position: relative;
    top: -200rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    overflow: hidden;
    text-overflow:ellipsis '.';
    white-space: nowrap;
    /* flex-wrap:wrap; */
  }
  
  .picker {
    padding-left: 10rpx;
    /* font-size: large; */
    color: #00B386;
  }
  
  .pick-position-arrow {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    transform: rotate(90deg);
  }
  
  /* 列表 */
  .list {
    position: relative;
    top: -110rpx;
    width: auto;
    height: 270px;    /*高度不需要相对大小*/
    margin: 0 25rpx 0 25rpx;
    display: flex;
    flex-direction: column;
    /* align-items: flex-start; */
    justify-content: space-around;
    /* border: solid 1px red; */
  }
  
  .weui-cell weui-cell_access {
    /* padding: 5px 0 5px 0; */
    position: relative;
    /* border: solid 1px red; */
  }
  
  .weui-cell__hd image {
    margin-right: 15px;
    vertical-align: middle;
    width: 40px;
    height: 40px;
  }
  
  /* 列表项 */
  .weui-cell__hd {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content:left;
  }
  
  .opti{
    width: 80%;
  }
  .weui-cells::after {
    content: none;
    border-bottom: none;
  }
  
  .weui-cells::before {
    border-top: none;
  }
  
  
  