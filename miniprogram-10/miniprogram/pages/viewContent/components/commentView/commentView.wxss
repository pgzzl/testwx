/* pages/viewContent/components/commentView/commentView.wxss */
.container{
    display: flex;
    border-bottom: 1px solid rgba(0,0,0,0.5);
    padding-bottom: 10px;
    padding-top: 10px;
    width: calc(100% - 20px);
    margin-left: 10px;
    margin-right: 10px;
}
.userIconBox{
    width: 74px;
    padding-right: 10px;
}
.userIcon{
    width: 54px;
    height: 54px;
    border-radius: 27px;
}
.userName{
    color: rgba(0, 0, 0, 0.8);
    font-family: Noto Sans;
    font-size: 16px;
    font-weight: 700;
    line-height: 22px;
    letter-spacing: 0px;
    text-align: left;
}
.rateBox{
    display: flex;
    font-size: 10px;
}
.rate{
    color: rgb(0, 179, 134);
    font-family: Noto Sans SC;
    font-size: 10px;
    font-weight: 400;
    line-height: 12px;
    letter-spacing: 0px;
    text-align: left;
}
.postTime{
    color: rgb(170, 170, 170);
    font-family: Noto Sans SC;
    font-size: 9px;
    font-weight: 400;
    line-height: 13px;
    letter-spacing: 0px;
    text-align: left;
}
.content{
    color: rgba(18, 18, 18, 0.6);
    font-family: Noto Sans SC;
    font-size: 12px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0px;
    text-align: left;
    overflow: hidden;
    height: 45px;
}
.imgBox{
    width: 200px;
    height: 200px;
}
.img{
    width: 200px;
    height: 200px;
    border-radius: 5px;
}