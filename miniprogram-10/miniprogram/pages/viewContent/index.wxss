/* pages/viewContent/index.wxss */
.top{
    height: 35px;
    padding: 5px;
}
.noteImage{
    height: 25px;
    width: 25px;
    float: right;
}
.button-share{
    float: right;
    height: 25px;
    width: 45px;
    padding: 0px;
    padding-left: 20px;
    padding-right: 10px;
}
.shareImage{
    height: 25px;
    width: 25px;
    
}
.content{
    height: calc(100vh - 45px);
}
.swiperBox{
    height: 350px;
}
.swiperbody{
    height: 350px;
}
.swiperItem{
    position: relative;
    width: 100%;
    height: 350px;
    left: 0;
}
.rate{
    color: rgb(0, 179, 134);
    height: 35px;
    padding: 10px;
}
.locationBox{
    position: relative;
    width: calc(100% - 20px);
    height: 40px;
    margin-left: 10px;
    margin-right: 10px;
    border-top:1px solid rgba(0,0,0,0.5);
    border-bottom: 1px solid rgba(0,0,0,0.5);
    display: flex;
    justify-content: space-between;
}
.location{
    padding-top: 13px;
    width: fit-content;
    color: rgb(170, 170, 170);
font-family: Noto Sans SC;
font-size: 12px;
font-weight: 400;
line-height: 18px;
letter-spacing: 0px;
text-align: left;

}

.navi{
    height: 30px;
    width: 30px;
    flex-direction: row;
    padding-right: 15px;
}
.map{
    font-size: 11px;
    color: rgb(170, 170, 170);
}
.headline{
    height: 25px;
    display: flex;
    justify-content: space-between;
    padding: 10px;
}
.headline-left{
    width: 70%;
    color: rgb(0, 0, 0);
font-family: Noto Sans SC;
font-size: 14px;
font-weight: 400;
line-height: 21px;
letter-spacing: 0px;
text-align: left;
}
.headline-right{
    width: 30%;
    color: rgba(0, 0, 0, 0.5);
    font-family: Noto Sans SC;
    font-size: 12px;
    font-weight: 400;
    line-height: 15px;
    letter-spacing: 0px;
    text-align: right;
    padding-top:2px;
    padding-right: 2px;
}